<% layout('layouts/boilerplate') -%>
<h1>All Munch-Mysteries</h1>
<div class="row">
  <% for(let munch of munches) {%>
    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card my-3" style="width: 18rem;">
        <div class="col-md-4">
          <img class="img-fluid" alt="" src="<%=munch.images[0].url%>">
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= munch.title %></h5>
          <p class="card-text">Average Price: <%= munch.averagePrice %></p>
          <p class="card-text">Description: <%= munch.description %></p>
          <p class="card-text">Location: <%= munch.location %></p>
          <a href="/munches/<%= munch._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
<% } %>
</div>

