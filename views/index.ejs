<% layout('layouts/boilerplate') -%>
<h1>All Munch-Mysteries</h1>
<div class="row">
  <% for(let place of places) {%>
    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card my-3">
        <div class="col-md-4">
          <img class="img-fluid" alt="" src="<%=place.images[0].url%>">
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= place.title %></h5>
          <p class="card-text">Average Price: <%= place.averagePrice %></p>
          <p class="card-text">Description: <%= place.description %></p>
          <p class="card-text">Location: <%= place.location %></p>
          <a href="/places/<%= place._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
<% } %>
</div>

