<% layout('layouts/boilerplate') -%>
    <h1>Edit Munch-Mystery</h1>
    <form action="/munches/<%= munch._id %>?_method=PUT" method="POST">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="place[title]" id="title" value="<%= munch.title %>"/>

        <label for="description">Description</label>
        <input type="text" class="form-control" name="place[description]" id="description" value="<%= munch.description%>" />

        <label for="location">Location</label>
        <input type="text" class="form-control" name="place[location]" id="location" value="<%= munch.location %>"/>

        <button class="btn btn-primary my-2">Submit</button>
    </form>
